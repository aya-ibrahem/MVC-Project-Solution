@model Department
@{
    ViewData["Title"] = "Delete";
}
<h1>Are You Sure to Delete This Department? </h1>
<form asp-action="Delete">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Code">Code</label>
        <input class="form-control" asp-for="Code" readonly />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name" readonly />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="DateOfCreation">DateOfCreation</label>
        <input class="form-control" asp-for="DateOfCreation" readonly />
    </div>
    <input type="Submit" value="Delete" class="btn btn-danger" />|
    <a asp-action="Index" class="btn btn-light">Cancel</a>
</form>

